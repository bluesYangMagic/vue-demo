body, html
  line-height: 1
  font-weight: 200
  font-family: "Helvetica Neue", Helvetica, STHeiTi, sans-serif

.clearfix
  &:before,
  &:after
    content: " "
    display: table
  &:after
    clear: both

// .clearfix
